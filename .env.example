# ===========================================
# F1 News Bot Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# Telegram Configuration
# ===========================================
# Get these from https://my.telegram.org/apps
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE=your_phone_number_here

# Get bot token from @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHANNEL_ID=your_channel_id_here
TELEGRAM_ADMIN_ID=your_admin_id_here

# ===========================================
# Database Configuration
# ===========================================
# PostgreSQL database URL
DATABASE_URL=postgresql://f1_user:f1_password@localhost:5432/f1_news

# Redis cache URL
REDIS_URL=redis://localhost:6379/0

# ===========================================
# Ollama Configuration
# ===========================================
# Ollama server URL (default: http://localhost:11434)
OLLAMA_BASE_URL=http://localhost:11434

# Ollama model to use (default: llama2)
OLLAMA_MODEL=llama2

# ===========================================
# External APIs (Optional)
# ===========================================
# Reddit API credentials (optional)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=F1NewsBot/1.0

# Twitter API credentials (optional)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# ===========================================
# News Sources
# ===========================================
# RSS feeds for F1 news (comma-separated)
RSS_FEEDS=https://www.f1news.ru/export/news.xml,https://www.f1-world.ru/news/rssexp6.xml,https://feeds.bbci.co.uk/sport/formula1/rss.xml

# Telegram channels to monitor (comma-separated, optional)
TELEGRAM_CHANNELS=@f1channel1,@f1channel2

# ===========================================
# Processing Configuration
# ===========================================
# How often to check for new news (in minutes)
CHECK_INTERVAL_MINUTES=30

# Maximum posts per hour
MAX_POSTS_PER_HOUR=5

# Minimum relevance score (0.0-1.0)
MIN_RELEVANCE_SCORE=0.3

# Maximum news items to process per check
MAX_NEWS_ITEMS_PER_CHECK=50

# ===========================================
# Logging Configuration
# ===========================================
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/f1_news_bot.log

# Debug mode (true/false)
DEBUG=false

# ===========================================
# Development/Testing
# ===========================================
# Set to true for testing without real Telegram bot
TEST_MODE=false

# Mock data for testing
USE_MOCK_DATA=false
